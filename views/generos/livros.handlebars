<h1>{{genero.nome}}</h1>

{{#each livros}}
    <div class="card mb-2">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/livro/{{_id}}"><button class="btn btn-success">Leia mais</button></a>
            <hr />
            <small>Data de publicação: {{data}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhum livro</h5>
{{/each}}