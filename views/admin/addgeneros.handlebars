{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Novo gênero:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/generos/novo" method="post">
            <label for="nome">Nome</label>
            <input
                type="text"
                name="nome"
                id="nome"
                placeholder="Nome do gênero"
                class="form-control"
                required
            />
            <label for="descricao">Descrição</label>
            <textarea
                placeholder="Descrição do gênero"
                name="descricao"
                class="form-control"
                required
            ></textarea>
            <br />
            <button type="submit" class="btn btn-success">Criar gênero</button>
        </form>
    </div>
</div>