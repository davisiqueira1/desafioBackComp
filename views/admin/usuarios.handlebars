<h2>Lista de usuários: </h2>
<hr />

{{#each usuarios}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <p>Email: {{email}}</p>
            <small>Data: {{data}}</small><br />
            <small>Administrador: {{ehAdmin}}</small><br />
            <a href="/admin/usuarios/edit/{{_id}}"><button
                    class="btn btn-success mt-2"
                >Editar usuário</button>
            </a>

            <form action="/admin/usuarios/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}" />
                <button type="submit" class="btn btn-danger mt-2">Deletar
                    usuário</button>
            </form>

        </div>
    </div>
{{/each}}