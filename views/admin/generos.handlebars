<h2>Lista de gêneros: </h2>
<hr />
<a href="/admin/generos/add">
    <button class="btn btn-success">Novo gênero</button>
</a>
<hr />
{{#each generos}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{descricao}}</small><br />
            <small>{{data}}</small><br />
            <a href="/admin/generos/edit/{{_id}}"><button
                    class="btn btn-success mt-2"
                >Editar gênero</button>
            </a>
            <form action="/admin/generos/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}" />
                <button type="submit" class="btn btn-danger mt-2">Deletar gênero</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhum gênero registrado</h4>
{{/each}}